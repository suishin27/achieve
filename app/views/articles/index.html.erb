<div class="container">
  <ul class="row">
    <li class="col-md-4"></li>
    <li class="col-xs-12 col-md-4">



      <table class="table table-striped">
        <tr><center><h1>一言一覧</h1></center>
          <div class="alert alert-success" role="alert">
            <p><%= notice %></p>
          </div>
        </tr>
        <div class="btn-group" role="group" aria-label="btn">
          <% @articles.each do |article| %>
            <tr>
              <td><%= article.content %></td>
              <td><button type="button" class="btn btn-default"><%= link_to "編集", edit_article_path(article.id), data: { confirm: '本当に編集していいですか？' } %></button></td>
             <td><button type="button" class="btn btn-default"><%= link_to '削除', article_path(article.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></button></td>
            </tr>
       
        <% end %>
        </div>
      </table>
      <div class="btn-group" role="group" aria-label="btn">
      　　<button type="button" class="btn btn-default"><%= link_to '一言を投稿する', new_article_path %>
　　　</div>

    </li>
    <li class="col-md-4"></li>
  </ul>

</div>